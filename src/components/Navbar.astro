---
import Logo from "/logo.png";
---

<header class="p-4 font-light md:text-lg tracking-wide">
  <nav
    class="text-slate-200 flex flex-col space-y-4 md:space-y-0 md:flex-row md:items-center md:justify-between"
  >
    <a
      href="/"
      class="flex items-center justify-center md:flex-[0.1] py-1 border-2 border-amber-500 rounded-lg"
    >
      <img src={Logo} alt="logo" class="md:w-12 md:h-12 w-8 h-8" />
    </a>
    <ul class="flex items-center justify-around md:flex-[0.6] p-4">
      <li>
        <a
          href="#stack"
          class="hover:bg-amber-500/70 duration-[250ms] transition ease-in-out px-3 py-2 rounded-md"
          >Stack</a
        >
      </li>
      <li>
        <a
          href="#projects"
          class="hover:bg-amber-500/70 duration-[250ms] transition ease-in-out px-3 py-2 rounded-md"
          >Projects</a
        >
      </li>
      <li>
        <a
          href="#contact"
          class="hover:bg-amber-500/70 duration-[250ms] transition ease-in-out px-3 py-2 rounded-md"
          >Contact</a
        >
      </li>
    </ul>
  </nav>
</header>
